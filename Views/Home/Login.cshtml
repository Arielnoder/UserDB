
@model usersdb.Models.UsersModel
@{
   List<UsersModel> users = TempData["users"] as List<UsersModel>;
    
}

<h1>Login</h1>


<form action="/Home/LoginGet" method="get" >
    <div class="form-group">
        <label for="UserName">User Name</label>
        <input type="text" class="form-control" id="UserName" placeholder="Enter User Name" asp-for="UserName" minlength="2" maxlength="12" required >
@if ( ViewBag.Message2 == null && ViewBag.Message2 == "DoesNotExsit") {
    <span style="color: red;">Username does not  exist</span>
}
    </div>

     <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" placeholder="Email" asp-for="Email" required>

        @if ( ViewBag.Message2 == null && ViewBag.Message2 == "DoesNotExsit") {
    <span style="color: red;">Email does not  exist</span>
}
    </div>


    <div class="form-group">
        <label for="Password">Password</label>
        <input type="Password" class="form-control" id="Password" placeholder="Password" asp-for="PassWord" minlength="8" maxlength="16" required>
    </div>

    

    <button type="submit" class="btn btn-primary" >Login</button>
</form>

